    "counter_ng = function()\n",
    "    c = 0\n",
    "    # closure\n",
    "    λ = function(action=:inc)\n",
    "        if action == :inc\n",
    "            c += 1\n",
    "        elseif action == :dec\n",
    "            c -= 1\n",
    "        elseif action == :reset\n",
    "            c = 0\n",
    "        else\n",
    "            print(\"action $action not yet supported...\")\n",
    "        end\n",
    "    end\n",
    "    return λ\n",
    "end"
