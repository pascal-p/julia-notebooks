     "execution_count": 1,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "function δ(a::Float64, b::Float64, c::Float64)::Float64\n",
    "    b * b - 4 * a * c\n",
    "end\n",
    "\n",
    "function root(a::Float64, b::Float64, c::Float64) # ::Tuple()\n",
    "    Δ = δ(a, b, c) \n",
    "    if Δ < 0\n",
    "        throw(\"No solution in ℜ\")\n",
    "    else\n",
    "        x1 = (-b + √ Δ) / 2a\n",
    "        x2 = (-b - √ Δ) / 2a\n",
    "        (x1 = x1, x2 = x2) # named tuple\n",
    "    end\n",
    "end\n",
    "\n"
   ]
  },
